<h1>Edit post</h1>

<%= form_for :post, url: post_path(@post), method: :put do |f| %>
	
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :summary %><br />
		<%= f.text_area :summary %>
	</p>
	
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%=	f.submit %>
	</p>

<% end %>
