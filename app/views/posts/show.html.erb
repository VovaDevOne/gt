<article class="post">
	<section class="post-head">
		<h1><%= @post.title %></h1>
		<small>
			<time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
			|
			<%= link_to 'Змінити', edit_post_path(@post) %>
			|
			<%= link_to 'Видалити', post_path(@post), method: :delete, data: {confirm: 'Ви впевнені ?'} %>
		</small>
	</section>
	<section class="post-body">
		<%= @post.body %>
	</section>
</article>